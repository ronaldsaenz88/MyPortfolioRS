<!DOCTYPE html>
<html>
  <head>
    <%- include('../partials/head'); %>
  </head>
  <body id="page-top">
    <!-- Begin Preloader -->
    <%- include('../partials/preloader'); %>
    <!-- End Preloader -->
    <div class="page db-social">
      <!-- Begin Header -->
      <%- include('../partials/header'); %>
      <!-- End Header -->

      <!-- Begin Page Content -->
      <div class="page-content d-flex align-items-stretch">
        <!-- Begin Side Navbar -->
        <div class="compact-sidebar light-sidebar has-shadow">
          <%- include('../partials/sidebar'); %>
        </div>
        <!-- End Side Navbar -->
        
        <!-- Begin Content -->
        <div class="content-inner compact">
          <div class="container-fluid">
            <div class="row justify-content-center">
                <div class="col-xl-11">
                    <!-- Begin Page Header-->
                    <div class="page-header pr-0 pl-0">
                        <div class="d-flex align-items-center">
                            <h2 class="page-header-title">Business Contact</h2>
                        </div>
                    </div>
                    <!-- End Page Header -->
                    <div class="row flex-row">
                        <div class="col-xl-12">
                            <!-- Form -->
                            <div class="widget has-shadow">
                                <div class="widget-header bordered no-actions d-flex align-items-center">
                                    <h4>Add Business Contact</h4>
                                </div>
                                <div class="widget-body">
                                    <form class="form" method="POST">
                                        <div class="form-group">
                                            <label for="nameTextField">First Name</label>
                                            <input type="text" class="form-control" id="first_nameTextField" placeholder="Enter the first name" name="first_name" required>
                                        </div>

                                        <div class="form-group">
                                            <label for="nameTextField">Last Name</label>
                                            <input type="text" class="form-control" id="last_nameTextField" placeholder="Enter the last name" name="last_name" required>
                                        </div>
                                        
                                        <div class="form-group">
                                            <label for="nameTextField">Company</label>
                                            <input type="text" class="form-control" id="companyTextField" placeholder="Enter the company" name="company" >
                                        </div>
                                        
                                        <div class="form-group">
                                            <label for="nameTextField">Email</label>
                                            <input type="text" class="form-control" id="emailTextField" placeholder="Enter the email" name="email" required>
                                        </div>
                                        
                                        <div class="form-group">
                                            <label for="nameTextField">Phone Number</label>
                                            <input type="text" class="form-control" id="phone_numberTextField" placeholder="Enter the phone number" name="phone_number" >
                                        </div>
                                        
                                        <div class="form-group">
                                            <label for="nameTextField">LinkedIn Profile</label>
                                            <input type="text" class="form-control" id="linkedin_urlTextField" placeholder="Enter the LinkedIn Url" name="linkedin_url" >
                                        </div>
                        
                                        <button class="btn btn-primary" type="submit"><i class="fas fa-edit"></i> Submit</button>
                                        <a href="/business_contact_list" class="btn btn-warning"><i class="fas fa-undo"></i> Cancel</a>
                                    </form>
                                </div>
                            </div>
                            <!-- End Form -->
                        </div>
                    </div>
                    <!-- End Row -->
                </div>
              <!-- End Col -->
            </div>
            <!-- End Row -->
          </div>
          <!-- End Container -->

          <!-- Begin Page Footer-->
          <%- include('../partials/footer'); %>
          <!-- End Page Footer -->
        </div>
        <!-- End Content -->
      </div>
      <!-- End Page Content -->
    </div>

    <!-- Begin Vendor Js and Page Vendor Js -->
    <%- include('../partials/foot_js'); %>
    <!-- End Vendor Js and Page Vendor Js -->
  </body>
</html>